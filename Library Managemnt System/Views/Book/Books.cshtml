
@{
    ViewData["Title"] = "Books";
}
@model List<Book>
<h1>Books</h1>

<table class="table table-bordered table-hover">
    <tr class= "table-info">
        <th>ID</th>
        <th>Name</th>
        <th>Author</th>
        <th>Image</th>
        <th>CategoryId</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
            <tr>
                <td>@item.Id</td> 
                <td>@item.Name</td>
                <td>@item.Author</td>            
                                <td><img src="@item.Image" alt="@item.Name" class="img-rounded" /></td>
                <td>@item.CategoryId</td>


                <td><a href="/Book/Update/@item.Id" class="btn btn-info">Edit</a></td>
                <td>
                            <form asp-action="Delete" asp-controller="Book" asp-route-id="@item.Id" method="post" onsubmit="return confirmDelete();">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                </td>

            </tr>
    }

</table>



